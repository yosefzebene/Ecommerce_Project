<div class="card">
  <header class="card-header">
    <p class="card-header-title">
      <%= product.name %>
    </p>
  </header>

  <div class="card-image">
    <figure class="image is-square">
      <% if product.image.attached? %>
        <%= image_tag product.image.variant(:display) %>
      <% end %>
    </figure>
  </div>

  <div class="card-content">
    <div class="media">
      <div class="media-content">
        <% if product.discount? %>
            <s class="has-text-danger"><%= number_to_currency product.price_in_dollar %></s>
            <strong><%= number_to_currency product.discount_price %></strong>
        <% else %>
            <p class="subtitle is-6"><%= number_to_currency product.price_in_dollar %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>